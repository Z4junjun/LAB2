/* pages/main/main.wxss */
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.container {
  display: flex;
  justify-content: space-around;
}
.container>button {
  margin:20px;
}
.container view:nth-child(1){
  font-size: 80px;
  font-weight: bolder;
  color: rgb(252, 252, 164);
  text-shadow: 0 0 10px white;
  animation: animate 3s linear infinite;
}
@keyframes animate {
  0%,
  100% {
    filter: blur(0.5px);
    color: rgb(255, 255, 182);
  }
  25%,
  75% {
    filter: blur(0.25px);
    color: rgb(250, 250, 142);
  }
  40%,
  60% {
    filter: blur(0px);
    color: rgb(250, 250, 102);
  }
}
